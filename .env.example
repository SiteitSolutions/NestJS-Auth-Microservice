# Database Configuration
MONGO_URI=mongodb://root:password@localhost:27017/nestdb?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=900000

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-here-make-it-different-from-jwt
EMAIL_VERIFICATION_SECRET=your-email-verification-secret-here

# Application Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Logging
LOG_LEVEL=info

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Security
REQUIRE_SESSION_ID=false  # Set to true to reject tokens without sessionId (stricter security)
